{
  "name": "vue-toffee-ui",
  "description": "vue ui ",
  "license": "MIT",
  "scripts": {
    "precommit": "lint-staged",
    "install": "lerna bootstrap",
    "dev:client": "cd packages/client && yarn dev",
    "dev:server": "cd packages/server && yarn dev",
    "build:dev": "cd packages/client && yarn build"
  },
  "lint-staged": {
    "packages/client/*/*.{js,vue}": [
      "prettier --write",
      "git add"
    ]
  },
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "babel-eslint": "^8.2.3",
    "lerna": "2.10.2",
    "eslint": "^4.19.1",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-prettier": "^2.6.0",
    "eslint-plugin-vue": "^4.5.0",
    "lint-staged": "^6.0.0",
    "prettier": "^1.12.1"
  }
}
